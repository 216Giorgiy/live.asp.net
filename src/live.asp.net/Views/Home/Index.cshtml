@using live.asp.net.ViewModels
@using live.asp.net.Models
@model HomeViewModel

@{
    ViewData["Title"] = "ASP.NET Community Standup";
}

@section PreContent {
    <div class="jumbotron">
        <div class="container">
            <a href="https://www.microsoft.com">
                <img src="~/images/Microsoft_logo.svg" width="100" />
            </a>
            <h1 class="text-center">
                ASP.NET Community Standup
                @if (Model.IsOnAir)
                {
                    <span class="label label-danger">ON AIR</span>
                }
                else if (Model.HasAdminMessage)
                {
                    <span class="label label-warning">STAY TUNED</span>
                }
            </h1>
            @if (Model.HasAdminMessage)
            {
                <p class="text-center">
                    @Model.AdminMessage
                </p>
            }
            else if (Model.IsOnAir)
            {
                <partial name="_HangoutEmbed" model="Model"></partial>
            }
            else
            {
                <div class="next-episode text-center">
                    @if (Model.NextShowScheduled)
                    {
                        <h2>
                            Next Episode Streaming Live on
                            <br /><strong id="nextShowTime" class="hidden">@Model.NextShowDateUtc.Value.ToString("u")</strong>
                        </h2>
                        <script>
                            (function () {
                                var nextShowDateUtc = new Date(Date.UTC(
                                    @Model.NextShowDateUtc.Value.Year,
                                    @(Model.NextShowDateUtc.Value.Month-1),
                                    @Model.NextShowDateUtc.Value.Day,
                                    @Model.NextShowDateUtc.Value.Hour,
                                    @Model.NextShowDateUtc.Value.Minute));

                                var timeZoneName = extractTimeZoneName(nextShowDateUtc.toString());
                                var nextShowTimeEl = document.getElementById("nextShowTime");
                                nextShowTimeEl.textContent = formatDateTime(nextShowDateUtc) + " (" + timeZoneName + ")";
                                nextShowTimeEl.className = "";

                                function extractTimeZoneName(dateString) {
                                    var name = dateString.substring(dateString.indexOf("(") + 1);
                                    name = name.substr(0, name.length - 1);
                                    return name;
                                }

                                function formatDateTime(dateTime) {
                                    return nextShowDateUtc.getDate() + " " +
                                           monthName(nextShowDateUtc.getMonth()) + ", " +
                                           nextShowDateUtc.getFullYear() + " at " +
                                           formatTime(nextShowDateUtc.getHours(), nextShowDateUtc.getMinutes());
                                }

                                function monthName(month) {
                                    var names = ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"];
                                    return names[month];
                                }

                                function formatTime(hours, minutes) {
                                    var tt = hours < 12 ? " AM" : " PM",
                                        hour = hours < 12
                                            ? hours
                                            : hours === 12
                                                ? 12
                                                : (hours - 12),
                                        mins = minutes < 10 ? "0" + minutes : minutes;
                                    return hour + ":" + mins + tt;
                                }
                            })();
                        </script>
                    }
                    else
                    {
                        <h2>Streaming Live Every Tuesday</h2>
                        <p>Alternating between 9:30 AM and 3:45 PM Pacific Time, week to week.</p>
                    }
                    <p>Check back here to watch &amp; ask questions then!</p>
                </div>
            }
        </div>
    </div>
}

    @if (Model.ShowPreviousShows)
    {
        <h2>Previous Episodes</h2>

        <div class="row">
            @foreach (var show in Model.PreviousShows)
            {
                <partial name="_YouTubeShow" model="show"></partial>
            }
        </div>

        @if (Model.ShowMoreShowsUrl)
        {
            <div class="row">
                <div class="col-md-12 text-center">
                    <a href="@Model.MoreShowsUrl" class="btn btn-primary">See More Episodes</a>
                </div>
            </div>
        }
    }